<html>
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Test Application{% endblock %}</title>
  {% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('build/bootstrap.css') }}"/>
  {% endblock %}
</head>
<body>
  <div class="header">
    <center><h1>Система сбора и обработки статистики</h1></center>
  </div>
  <div id="wrapper">
   <div id="sidebar-wrapper">
    {% block sidebar %}
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
          <a href="#">
            Привестивую: {{ current_user.fio }}
          </a>
        </li>
        {% if current_user.role == 'ROLE_DOC_LEAD' or current_user.role == 'ROLE_SUPER_USER'%}
        <li>
          <a href="{{ path('gist', {'year':2015})}}">Динамика продаж по билетам</a>
        </li>
        {% endif %}
        {% if current_user.role == 'ROLE_DOC_LEAD' or current_user.role == 'ROLE_SUPER_USER'%}
        <li>
          <a href="{{ path('chart')}}">Динамика продаж за период</a>
        </li>
        {% endif %}
        {% if current_user.role == 'ROLE_DOC_EMP' or current_user.role == 'ROLE_DOC_LEAD' or current_user.role == 'ROLE_SUPER_USER'%}
        <li>
          <a href="{{ path('pie')}}">Диаграмма по билетам</a>
        </li>
        {% endif %}
        {% if current_user.role == 'ROLE_STAT_EMP' or current_user.role == 'ROLE_STAT_LEAD' or current_user.role == 'ROLE_SUPER_USER'%}
        <li>
          <a href="{{ path('kassirtable')}}">Кассиры</a>
        </li>
        {% endif %}
        <li>
          <a href="/transport"">Транспорт</a>
        </li>
        <li>
          <a href="/logout" class="btn btn-default btn-flat">Выйти</a>
        </li>
        
      </ul>
    </div>
    {% endblock %}
  </div>

  
  {% block body %}
  <div id="page-content-wrapper">
    <div class="container-fluid">
     <div class="menu-wrapper">
      <div class="hamburger-menu"></div>      
    </div>
  </div>
</div>

{% endblock %}
{% block javascripts %}
<script type ="text/javascript" src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</div>
</div>
</body>
</html>